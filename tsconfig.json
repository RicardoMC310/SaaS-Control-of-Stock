{
  "extends" : "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",

    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    "outDir": "dist/src",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "plugins": [
      { "transform": "ts-transform-paths" }
    ]
  },
  "include": ["src/**/*"]
}
